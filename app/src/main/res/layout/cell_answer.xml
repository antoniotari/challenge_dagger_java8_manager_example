<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv">

        <FrameLayout
            android:id="@+id/cellFrame"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue_holo"
            android:padding="4dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:backgroundImage="@color/black"
                android:id="@+id/answerImage"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="100"
                fresco:roundAsCircle="false"
                fresco:placeholderImage="@drawable/ic_drawer"/>

            <View
                android:id="@+id/overlayButtonView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>
